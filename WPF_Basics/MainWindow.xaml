<Window x:Class="WPF_Basics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Basics"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <TextBlock HorizontalAlignment="Center" Margin="20">Hello World</TextBlock>

        <ListBox Height="100" Width="100" BorderBrush="Black" Background="Beige">
            <ListBoxItem Content="Item 1" MouseDoubleClick="ListBoxItem1_MouseDoubleClick" HorizontalAlignment="Center" />
            <ListBoxItem Content="Item 2" MouseDoubleClick="ListBoxItem1_MouseDoubleClick" HorizontalAlignment="Center"  />
            <ListBoxItem Content="Item 3" MouseDoubleClick="ListBoxItem1_MouseDoubleClick" HorizontalAlignment="Center"  />
            <ListBoxItem Content="Item 4" MouseDoubleClick="ListBoxItem1_MouseDoubleClick" HorizontalAlignment="Center"  />
            <ListBoxItem Content="Item 5" MouseDoubleClick="ListBoxItem1_MouseDoubleClick" HorizontalAlignment="Center"  />
        </ListBox>

        <Button  Content="Here" Height="40" Width="100" Margin="20"  Click="Button_Click"></Button>
        
    </StackPanel>
</Window>
